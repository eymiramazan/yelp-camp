<% layout('layouts/boilerplate')%>
  <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark justify-content-center">
    <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/profile/account">Account Settings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile/campgrounds">My Campgrounds</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile/reviews">My Reviews</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-3">
    <div class="position-absolute top-50 start-50 translate-middle mb-5">
      <div class="d-flex justify-content-center">
        <h3>Change Password</h3>
      </div>
      <div class="mt-3">
        <form action="/profile/account" method="POST" class="validated-form" novalidate>
          <label class="form-label" for="oldPassword">Old Password</label>
          <input class="form-control" type="password" id="oldPassword" name="oldPassword" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <label class="form-label" for="newPassword">New Password</label>
          <input class="form-control" type="password" id="newPassword" name="newPassword" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <label class="form-label" for="reNewPassword">Confirm Password</label>
          <input class="form-control" type="password" id="reNewPassword" name="reNewPassword" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <button class="btn btn-success btn-block w-100 mt-3">Change Password</button> 
        </form>
      </div>
    </div>
    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-5">
      <h2 class="text-center text-danger">DANGER ZONE</h2>
      <h2 class="text-danger">DELETE MY ACCOUNT</h2>
      <form action="/profile/account/delete" method="POST">
        <button class="btn btn-danger btn-block w-100 mb-3">Delete My Account</button>
      </form> 
    </div>
  </div>